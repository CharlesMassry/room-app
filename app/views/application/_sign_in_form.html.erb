<h3>
  Sign In
</h3>

<%= form_for :user, url: sessions_path do |form| %>
  <div><%= form.email_field :email %></div>
  <div><%= form.password_field :password  %></div>
  <div><%= form.submit "Sign In" %></div>
<% end %>

<h3>
  Sign Up
</h3>

<%= form_for :user, url: users_path do |form| %>
  <div><%= form.email_field :email %></div>
  <div><%= form.password_field :password %></div>
  <div><%= form.submit "Sign Up" %></div>
<% end %>
